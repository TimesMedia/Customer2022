@model System.Data.DataTable

@{
    ViewBag.Title = "Index";
}

<h1 align="center"><b>Customer Details</b></h1>
<table class="table table-bordered table-striped" id="myTable">
    
    <tr>
        <td>
            <input type="text" id='myInput' onkeyup='tablesearch()' placeholder="Search" />
        </td>
    </tr>
    
    <tr>
        <th>FirstName</th>
        <th>Surname</th>
        <th>Subscription</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>
                <a href="@Url.Action("Create","Customer", new { @id = Model.Rows[i][0] })">Create</a>
                <a href="@Url.Action("Edit","Customer", new {@id=Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete","Customer", new {@id=Model.Rows[i][0]})">Delete</a>
                <a href="@Url.Action("View","Customer", new {@id=Model.Rows[i][0]})">View</a>
            </td>
        </tr>
    }
</table>
<br />
<br/>
<hr />
<table class="table table-bordered table-striped" id="myTable">
    <tr>
        <td>
            @Html.ActionLink("Home", "Index", "Login")
            
        </td>
    </tr>
</table>


 




